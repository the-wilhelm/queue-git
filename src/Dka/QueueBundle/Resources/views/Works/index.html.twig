{% extends 'DkaQueueBundle::layout.html.twig' %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default">
					<!-- Default panel contents -->
					<div class="panel-heading">
						<h1 style="margin:0;padding:0;" class="pull-left">Work Types</h1>
						<a href="{{ path('add_work') }}" type="button" class="btn btn-primary btn-lg pull-right">
					  		<i class="fa fa-plus"></i>
						</a>
						<br clear="all" />
					</div>
					<table class="table">
						<thead>
							<tr>
								<th>Name</th>
								<th style="text-align:right">Actions</th>
							</tr>
						</thead>
						{% for work in works %} 
							<tr>
								<td>{{ work.title }}</td>
								<td style="text-align:right">
									<a href="{{ path('edit_work', { id: work.id }) }}" type="button" class="btn btn-info">
								  		<i class="fa fa-edit"></i>
									</a>
									<a href="{{ path('delete_work', { id: work.id }) }}" type="button" class="btn btn-danger">
								  		<i class="fa fa-times"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</table
				</div>
			</div>
		</div>
	</div>
{% endblock %}